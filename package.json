{
  "name": "@zenithbuild/runtime",
  "version": "1.0.0",
  "type": "module",
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./template": "./src/template.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src",
    "RUNTIME_CONTRACT.md",
    "HYDRATION_CONTRACT.md"
  ],
  "scripts": {
    "test": "npm run contract:deps && npm run contract:scan && npm run contract:template",
    "test:legacy": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js tests/integration.spec.js",
    "contract:deps": "node dependency_contract.spec.js",
    "contract:scan": "node contract-scan.mjs",
    "contract:template": "node template-contract.spec.js",
    "audit:contracts": "node scripts/audit-contract-coverage.mjs"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "private": false
}
